{
  "root": true,
  "extends": "eslint:recommended",
  "globals": {
    "wp": false,
    "ajaxurl": false
  },
  "env": {
    "node": true,
    "es6": true,
    "amd": true,
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "objectLiteralDuplicateProperties": false
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-var": 1,
    "no-console": 0,
    "no-useless-escape": 0,
    "no-unused-vars": 0,
    "semi": [2, "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }]
  }
}
